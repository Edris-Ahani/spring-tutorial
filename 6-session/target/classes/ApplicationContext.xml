<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean id="e1" class="Employee">
        <constructor-arg value="10" type="int"></constructor-arg>
    </bean>

    <!--
    If you don't specify the type attribute in the constructor-arg element, by default string type constructor will be invoked.
    -->
    <bean id="e2" class="Employee">
        <constructor-arg value="10"></constructor-arg>
    </bean>


    <bean id="e3" class="Employee">
        <constructor-arg value="10" type="int" ></constructor-arg>
        <constructor-arg value="Edris"></constructor-arg>
    </bean>

</beans>